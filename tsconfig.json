{
  "extends": [
    "@virtual-live-lab/tsconfig/vite",
    "@virtual-live-lab/tsconfig/react"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client", "unplugin-icons/types/react"],
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "workers/**/*",
    "worker-configuration.d.ts",
    "eslint.config.ts",
    "react-router.config.ts",
    "vite.config.ts"
  ]
}
