{
  "extends": [
    "@virtual-live-lab/tsconfig/vite",
    "@virtual-live-lab/tsconfig/react"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "vite/client",
      "unplugin-icons/types/react",
      "./worker-configuration.d.ts"
    ],
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "workers/**/*",
    "env.d.ts",
    "worker-configuration.d.ts"
  ]
}
